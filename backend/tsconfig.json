{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",  // ← Важно для Node.js
      "esModuleInterop": true,  // ← Важно для совместимости
      "moduleResolution": "node",  // ← Важно
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  